{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "Logs/log.txt" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "AccountService"
    }
  },

  "Authentication": {
    "Realm": "application-realm",
    "BaseUrl": "http://localhost:8080",
    "RequireHttpsMetadata": false,
    "Audience": "account",
    "ClientId": "account-service",
    "ClientSecret": "BSuQRGbp8uFNsz09TZUsfAoJl1uOTPHO"
  },

  "ConnectionStrings": {
    "PostgreSqlConnection": "User ID=postgres;Password=postgres;Server=127.0.0.1;Port=5432;Database=account-service;Pooling=true;"
  },

  "Brokers": {
    "RabbitMQ": {
      "HostName": "localhost",
      "Port": "5672",
      "UserName": "testuser",
      "Password": "testpassword",
      "Exchange": "account.events",
      "Queues": [
        {
          "Name": "account.crm",
          "RoutingKey": "account.*"
        },
        {
          "Name": "account.notifications",
          "RoutingKey": "money.*"
        },
        {
          "Name": "account.antifraud",
          "RoutingKey": "client.*"
        },
        {
          "Name": "account.audit",
          "RoutingKey": "#"
        }
      ]
    }

  },

  "AllowedHosts": "*"
}
